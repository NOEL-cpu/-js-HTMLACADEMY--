let password = document.querySelector('.password');
let showPassword = document.querySelector('.show-password');
let securityBar = document.querySelector('.security-bar');
securityBar.style.width = '50%';

showPassword.onchange = function () {
  if (showPassword.checked) {
    password.type = 'text';
  } else {
    password.type = 'password';
  }
};

/*На 3 строке объявите переменную securityBar и запишите в неё элемент с классом security-bar
На следующей строке задайте элементу securityBar ширину 50%: securityBar.style.width = '50%';
Обратите внимание, под полем ввода «Пароль» появилась фиолетовая полоска.*/
